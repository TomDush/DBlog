<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>tickets</from-outcome>
			<to-view-id>/errors/underconstruction.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>create</from-outcome>
			<to-view-id>/errors/underconstruction.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>managetickets</from-outcome>
			<to-view-id>/errors/underconstruction.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		
		<locale-config>
			<default-locale>en_US</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>fr.dush.dblog.locales.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
</faces-config>

